        <TextBox HorizontalAlignment="Left" Height="23" Margin="161,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" Name="txtServidor"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="161,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" Name="txtPuerto"/>
