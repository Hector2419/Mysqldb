<Window x:Class="CRUD.Buscar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUD"
        mc:Ignorable="d"
        Title="Buscar" Height="450" Width="800" Background="Bisque">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="139" Margin="141,122,0,0" VerticalAlignment="Top" Width="426" x:Name="dgvBuscar" Background="DarkBlue"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="149,33,0,0" VerticalAlignment="Top" Width="94"/>
        <Button Content="Buscar" HorizontalAlignment="Left" Margin="321,97,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Name="btnBuscar"/>
        <TextBox HorizontalAlignment="Left" Name="txtNombre" Height="23" Margin="298,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Aceptar" Name="Aceptar" HorizontalAlignment="Left" Margin="135,326,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.751,1.033"/>
        <Button Content="Cancelar" Name="Cancelar" HorizontalAlignment="Left" Margin="545,326,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.751,1.033"/>

    </Grid>
</Window>
